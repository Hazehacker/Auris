<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="top.hazenix.auris.mapper.PlaylistMapper">

    <select id="getAllPlaylist" resultType="top.hazenix.auris.entity.Playlist">
        select id, name, sort, slug, status, create_time, update_time, user_id
        from playlist
        <where>
            user_id = #{userId}
                and status = true
        </where>
    </select>
</mapper>
